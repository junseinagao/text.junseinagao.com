{
  "name": "text.junseinagao.com",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build:markdown": "node build-content.js",
    "build:css": "npm run generate:tailwind -- --minify",
    "build:remix": "remix build",
    "build": "run-s \"build:*\"",
    "dev:markdown": "node build-content.js --watch",
    "dev:css": "npm run generate:tailwind -- --watch",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev": "npm run build && run-p \"dev:*\"",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "generate:tailwind": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/_tailwind.css",
    "format": "prettier --write .",
    "lint": "eslint ./app/**/*.{js,jsx,ts,tsx} --no-error-on-unmatched-pattern --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@primer/css": "^20.4.1",
    "@remix-run/cloudflare": "^1.6.5",
    "@remix-run/cloudflare-pages": "^1.6.5",
    "@remix-run/react": "^1.6.5",
    "@tanem/react-nprogress": "^5.0.10",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.4",
    "highlight.js": "^11.6.0",
    "markdown-splendor": "^1.0.1",
    "mdx-bundler": "^9.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^3.3.0",
    "rss-parser": "^3.12.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@remix-run/dev": "^1.6.5",
    "@remix-run/eslint-config": "^1.6.5",
    "@remix-run/node": "^1.6.5",
    "@testing-library/dom": "^8.16.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.3.0",
    "@types/html-to-text": "^8.1.0",
    "@types/marked": "^4.0.3",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "@vitejs/plugin-react": "^2.0.0",
    "@vitest/ui": "^0.18.1",
    "autoprefixer": "^10.4.7",
    "c8": "^7.12.0",
    "chokidar": "^3.5.3",
    "esbuild": "^0.14.51",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-mdx": "^2.0.2",
    "happy-dom": "^6.0.4",
    "html-to-text": "^8.2.1",
    "marked": "^4.0.18",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "rehype-highlight": "^5.0.2",
    "remark-gfm": "^3.0.1",
    "remark-mdx-images": "^2.0.0",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4",
    "vite": "^3.0.2",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.18.1",
    "wrangler": "beta"
  },
  "engines": {
    "node": ">=14"
  }
}
